<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgVideoFolder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_video_folder"
        app:layout_constraintBottom_toTopOf="@+id/imgAudioFolder"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/imgAudioFolder"
        app:layout_constraintEnd_toEndOf="@id/imgAudioFolder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVideoFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_folder"
        app:layout_constraintStart_toStartOf="@id/imgVideoFolder"
        app:layout_constraintEnd_toEndOf="@id/imgVideoFolder"
        app:layout_constraintTop_toBottomOf="@id/imgVideoFolder" />

    <ImageView
        android:id="@+id/imgAudioFolder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_audio_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVideoFolder" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_folder"
        app:layout_constraintEnd_toEndOf="@id/imgAudioFolder"
        app:layout_constraintStart_toStartOf="@id/imgAudioFolder"
        app:layout_constraintTop_toBottomOf="@id/imgAudioFolder" />

</androidx.constraintlayout.widget.ConstraintLayout>